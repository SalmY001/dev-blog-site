Loop over each blog in the blogs array
<div class="container mt-4">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    {{#each blogs as |blog| }}
    <div class="col mb-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-primary"><a href="/blog/{{blog.dataValues.id}}">{{blog.dataValues.title}}</a></h2>
          <p class="card-text">Created by {{blog.user.dataValues.username}} on {{format_date blog.dataValues.date_created}}</p>
          <p class="card-text">{{blog.dataValues.content}}</p>

          {{#if blog.user_comments.dataValues}}
          <h3 class="card-title text-info">Comments</h3>
          <!-- Loop over each comment in the blog_comments array -->
          {{#each blog.user_comments.dataValues as |comment|}}
          <div class="comment">
            <p>Comment by User {{comment.user_id}}:</p>
            <p>{{comment.user_comment_text}}</p>
          </div>
          {{/each}}
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div> 

