<div class="row d-flex justify-content-center mt-5">
    <div class="col-10 col-md-6 col-lg-5 bg-dark text-light py-3 px-5 rounded">
        <h2 class="text-center">Sign-Up</h2>
        <form class="signup-form">
          <div class="mb-2">
            <label for="first_name" class="form-label">First Name</label>
            <input type="first_name" class="form-control" id="first_name" placeholder="Enter Your First Name">
          </div>
           <div class="mb-2">
            <label for="last_name" class="form-label">Last Name</label>
            <input type="last_name" class="form-control" id="last_name" placeholder="Enter Your Last Name">
          </div>
          <div class="mb-2">
            <label for="username" class="form-label">Username</label>
            <input type="username" class="form-control" id="username_signup" placeholder="Enter Your Username">
          </div>
          <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password_signup" placeholder="Enter Your Password">
          </div>
          <div class="d-grid mb-3">
            <button type="submit" class="btn btn-warning">Sign Up</button>
          </div>
        </form>
      <p>Existing Account<a href="/login"> Sign in here!</a></p>
    </div>
</div>

<script src="/signup.js"></script>